{
   "name": "bamburgs",
   "version": "0.2.0",
   "description": "Expressive CSS Utilities",
   "author": "Joe Cianflone",
   "email": "joe@cianflone.co",
   "repository": {
      "type": "git",
      "url": "https://github.com/joecianflone/bamburgs"
   },
   "bugs": {
      "url": "https://github.com/joecianflone/bamburgs/issues"
   },
   "homepage": "https://joecianflone.co/bamburgs",
   "license": "MIT",
   "main": "main.js",
   "config": {
      "env": "production",
      "src": {
         "path": "src",
         "folders": {
            "styles": "sass"
         }
      },
      "dist": {
         "path": "dist",
         "folders": {
            "styles": "css"
         }
      }
   },
   "browserslist": [
      "> 2%",
      "IE 11",
      "last 2 versions"
   ],
   "scripts": {
      "build": "npm-run-all clean build:*",
      "build:css": ".bin/css.js",
      "clean": ".bin/clean.js",
      "dropin": ".bin/dropin.js",
      "watch": "npm-run-all clean --parallel watch:*",
      "watch:css": ".bin/watch-css.js"
   },
   "bin": {
      "clean": "./.bin/clean.js",
      "css": "./.bin/css.js",
      "dropin": "./.bin/dropin.js",
      "watch-css": "./.bin/watch-css.js"
   },
   "dependencies": {
      "css-mqpacker": "^6.0.1",
      "cssnano": "^4.0.0-rc.2",
      "fs-extra": "^5.0.0",
      "node-sass": "^4.7.2",
      "normalize.css": "^7.0.0",
      "npm-run-all": "^4.1.2",
      "onchange": "^3.3.0",
      "postcss": "^6.0.16",
      "postcss-assets": "^5.0.0",
      "postcss-cli": "^4.1.0",
      "postcss-cssnext": "^3.0.2",
      "postcss-flexbugs-fixes": "^3.2.0",
      "postcss-import": "^11.0.0",
      "postcss-pxtorem": "^4.0.1",
      "postcss-sprites": "^4.2.1",
      "shelljs": "^0.7.8"
   }
}
