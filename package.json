{
   "name": "bamburgs",
   "version": "0.0.1",
   "description": "the front end toolkit",
   "author": "Joe Cianflone <joe@cianflone.co>",
   "license": "MIT",
   "main": "main.js",
   "config": {
      "env": "development",
      "src": {
         "path": "src",
         "scripts": "js",
         "images": "images",
         "styles": "sass",
         "fonts": "fonts",
         "entry": "main"
      },
      "dist": {
         "path": "public/assets",
         "scripts": "js",
         "images": "images",
         "styles": "css",
         "fonts": "fonts",
         "sprites": "sprites"
      },
      "copy": [
         "fonts"
      ]
   },
   "browserslist": [
      "> 2%",
      "IE 11",
      "last 2 versions"
   ],
   "scripts": {
      "build": "npm-run-all clean build:*",
      "build:copy": "bin/copy.js",
      "build:images": "bin/images.js",
      "build:css": "bin/css.js",
      "build:scripts": "bin/scripts.js",
      "clean": "bin/clean.js",
      "deploy": "npm-run-all clean lint build:*",
      "lint": "bin/lint.js",
      "watch": "npm-run-all clean --parallel watch:*",
      "watch:copy": "bin/watch-copy.js",
      "watch:images": "bin/watch-images.js",
      "watch:css": "bin/watch-css.js",
      "watch:scripts": "bin/watch-scripts.js"
   },
   "dependencies": {
      "autoprefixer": "^7.1.1",
      "babel-core": "^6.24.1",
      "babel-preset-es2015": "^6.24.1",
      "babel-preset-es2016": "^6.24.1",
      "babel-preset-es2017": "^6.24.1",
      "browserify": "^14.4.0",
      "cssnano": "^3.10.0",
      "editorconfig-tools": "^0.1.1",
      "fs-extra": "^3.0.1",
      "imagemin": "^5.3.1",
      "imagemin-gifsicle": "^5.1.0",
      "imagemin-jpegtran": "^5.0.2",
      "imagemin-newer": "^1.0.2",
      "imagemin-optipng": "^5.2.1",
      "imagemin-svgo": "^5.2.2",
      "include-media": "^1.4.9",
      "node-sass": "^4.5.3",
      "normalize.css": "^7.0.0",
      "npm-run-all": "^4.0.2",
      "onchange": "^3.2.1",
      "postcss": "^6.0.1",
      "postcss-cli": "^4.1.0",
      "postcss-import": "^10.0.0",
      "postcss-sprites": "^4.2.1",
      "postcss-urlrev": "^2.0.0",
      "sass-lint": "^1.10.2",
      "shelljs": "^0.7.7",
      "susy": "^2.2.12",
      "uglify-js": "^3.0.15",
      "vue": "^2.3.3",
      "vueify": "^9.4.1"
   }
}
