{
   "name": "bamburgs",
   "version": "0.1.0",
   "description": "The Frontend Toolkit",
   "author": "Joe Cianflone",
   "email": "joe@cianflone.co",
   "repository": {
      "type": "git",
      "url": "https://github.com/joecianflone/bamburgs"
   },
   "bugs": {
      "url": "https://github.com/joecianflone/bamburgs/issues"
   },
   "homepage": "https://joecianflone.co/bamburgs",
   "license": "MIT",
   "main": "main.js",
   "config": {
      "env": "development",
      "src": {
         "path": "src",
         "scripts": "js",
         "images": "images",
         "styles": "sass",
         "fonts": "fonts",
         "jsFilename": "main",
         "stylesFilename": "app.scss"
      },
      "dist": {
         "path": "public/assets",
         "scripts": "js",
         "images": "images",
         "styles": "css",
         "fonts": "fonts",
         "sprites": "sprites",
         "jsFilename": "main",
         "stylesFilename": "app.css"
      },
      "copy": [
         {
            "fonts": [
               "fonts"
            ]
         }
      ]
   },
   "browserslist": [
      "> 2%",
      "IE 11",
      "last 2 versions"
   ],
   "scripts": {
      "build": "npm-run-all clean build:*",
      "build:docs": ".bin/doc.js",
      "build:copy": ".bin/copy.js",
      "build:images": ".bin/images.js",
      "build:css": ".bin/css.js",
      "build:vue": ".bin/vue.js",
      "clean": ".bin/clean.js",
      "deploy": "npm-run-all clean lint build:*",
      "lint": ".bin/lint.js",
      "watch": "npm-run-all clean --parallel watch:*",
      "watch:copy": ".bin/watch-copy.js",
      "watch:images": ".bin/watch-images.js",
      "watch:css": ".bin/watch-css.js",
      "watch:vue": ".bin/watch-vue.js"
   },
   "bin": {
      "clean": "./.bin/clean.js",
      "copy": "./.bin/copy.js",
      "docs": ".bin/doc.js",
      "images": "./.bin/images.js",
      "vue": "./.bin/vue.js",
      "css": "./.bin/css.js",
      "lint": "./.bin/lint.js",
      "watch-copy": "./.bin/watch-copy.js",
      "watch-images": "./.bin/watch-images.js",
      "watch-css": "./.bin/watch-css.js",
      "watch-vue": "./.bin/watch-vue.js",
   },
   "dependencies": {
      "css-mqpacker": "^6.0.1",
      "cssnano": "^4.0.0-rc.2",
      "editorconfig-tools": "^0.1.1",
      "fs-extra": "^4.0.1",
      "imagemin": "^5.3.1",
      "imagemin-gifsicle": "^5.2.0",
      "imagemin-jpegtran": "^5.0.2",
      "imagemin-newer": "^1.0.2",
      "imagemin-optipng": "^5.2.1",
      "imagemin-svgo": "^5.2.2",
      "node-sass": "^4.5.3",
      "normalize.css": "^7.0.0",
      "npm-run-all": "^4.1.1",
      "onchange": "^3.2.1",
      "postcss": "^6.0.10",
      "postcss-cli": "^4.1.0",
      "postcss-cssnext": "^3.0.2",
      "postcss-flexbugs-fixes": "^3.2.0",
      "postcss-import": "^11.0.0",
      "postcss-pxtorem": "^4.0.1",
      "postcss-sprites": "^4.2.1",
      "sass-lint": "^1.11.1",
      "sassdoc": "^2.3.0",
      "shelljs": "^0.7.8",

   }
}
